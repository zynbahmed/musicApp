<%- include('../partials/header') %>
<link rel="stylesheet" href="/stylesheets/newalbum.css">

<form action="/albums" method="POST" enctype="multipart/form-data">
  <label>Title:</label>
  <input type="text" placeholder="Type Album's Title" name="title">
  <label>Artist:</label>
  <!-- <input type="text" name="artist"> -->
  <select name="artist">
    <% artists.forEach((artist) => { %>
      <option value="<%= artist._id %>"><%= artist.name %></option> 
    <% }); %>
  </select>
  <label>Release Year:</label>
  <input type="text" placeholder="YYYY" name="releaseYear">
  <label>Genre:</label>
  <input type="text" placeholder="Type Album's Genre" name="genre">
  <label>Link:</label>
  <input type="text" placeholder="Paste Album's Link" name="link">
  <label for="image">Image: </label>
  <input type="file" name="image" id="imgInput" required>
  <input type="submit" value="Add Album">

</form>

<%- include('../partials/footer') %>
